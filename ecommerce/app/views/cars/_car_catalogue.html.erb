<div class="container">
  <div class="row row-cols-4">

  <% unless cars[0].nil? %>
    <div class="col">
        <%= link_to image_tag(url_for(cars[0].car_image), class:"img-fluid car-catalogue--car-image"), car_path(id: cars[0].id) %>
