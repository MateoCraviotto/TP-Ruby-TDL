        <h5 class="text-white text-uppercase text-center car-catalogue--header"><%= "$" + number_with_delimiter( cars[0].price, delimiter:".").to_s %></h5>
        
        <% if is_user_signed_in_car_owner(cars[0]) %>
          <%= link_to "BUY", "", class:"btn btn-success btn-buy btn-buy-disabled d-block", data: { confirm: "You cannot buy from your own post." } %>
        <% else %>
          <%= link_to "BUY", "", class:"btn btn-success btn-buy d-block" %>
