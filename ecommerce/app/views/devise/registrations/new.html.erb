<br/>
<div class="card col-6 mx-auto user-sign-up--card-div">
  <h2 class="card-header text-dark border-0">Sign up</h2>
  <h6 class="card-header text-dark small text-muted">Register your account to buy and sell in Legendary Motorsport</h6>
  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group col-8 mx-auto">
        <%= f.label :email, class: "col-form-label" %><br />
        <%= f.email_field :email, class: "form-control form-control-lg", autofocus: true, autocomplete: "email", placeholder: "name@example.com", require: true %>
      </div>

      <div class="field form-group col-8 mx-auto">
        <%= f.label :password, class: "col-form-label"%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control form-control-lg", autocomplete: "new-password", require: true %>
      </div>

      <div class="field form-group col-8 mx-auto">
        <%= f.label :password_confirmation, class: "col-form-label" %><br />
        <%= f.password_field :password_confirmation, class: "form-control form-control-lg", autocomplete: "new-password", require: true  %>
      </div>

      <div class="field form-group col-8 mx-auto">
        <%= f.label :username, class: "col-form-label" %><br />
        <%= f.text_field :username, class: "form-control form-control-lg", autofocus: true, autocomplete: "username", placeholder: "Username", require: true  %>
      </div>

      <div class="field form-group col-8 mx-auto">
        <%= f.label :first_name, class: "col-form-label" %><br />
        <%= f.text_field :first_name, class: "form-control form-control-lg", autofocus: true, autocomplete: "first_name", placeholder: "John", require: true  %>
      </div>

      <div class="field form-group col-8 mx-auto">
        <%= f.label :last_name, class: "col-form-label" %><br />
        <%= f.text_field :last_name, class: "form-control form-control-lg", autofocus: true, autocomplete: "last_name", placeholder: "Doe", require: true  %>
      </div>
    <br><br>
      <div class="actions d-grid gap-2 col-8 mx-auto">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg user-sign-up--btn-lg", type: "submit" %>
      </div>
    <% end %>

    <br/>
    <div class="actions d-grid gap-2 col-3 mx-auto">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<br><br>