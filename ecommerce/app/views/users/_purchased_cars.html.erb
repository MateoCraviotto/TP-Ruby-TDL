<div class="container">
  <div class="row row-cols-4">

    <% cars.each do |car| %>

        <% unless car.nil? %>

          <div class="col">
            <%= link_to image_tag(url_for(car.car_image), class:"img-fluid car-catalogue--car-image"), car_path(id: car.id) %>
            <h6 class="text-white text-uppercase d-block small text-center car-catalogue--header"> <%= car.manufacturer %> </h6>
            <h4 class="text-white text-uppercase text-center"> <%= link_to car.car_model, car_path(id: car.id), class:"catalogue--car-model-link" %> </h4>
            <h5 class="text-white text-uppercase text-center car-catalogue--header"><%= "$" + number_with_delimiter( car.price, delimiter:".").to_s %></h5>
            
            <div class="text-center">
              <i>Purchased on <%= car.purchased_at.strftime("%d/%m/%Y") %></i>
            </div>
          </div>

        <% else %>
          <div class="col"></div>
        <% end %>

    <% end %>
  </div>
</div>
<br/>
